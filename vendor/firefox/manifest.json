{
  "manifest_version": 3,
  "name": "Steam saver",
  "description": "Verify steam sites in real time.",
  "version": "1.0.1",
  "icons": {
    "128": "img/steam_saver.png"
  },
  "action": {
    "default_icon": "img/steam_saver.png"
  },
  "background": {
    "scripts": ["js/index.js"]
  },
  "host_permissions": ["*://*/*"],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ]
}
